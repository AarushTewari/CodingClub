<style>
    .btn-secondary{
        background-color: grey;
        border: solid 1px white;
    }
    .btn-secondary:hover{
        background-color: white;
        color: gray;
        border: solid 1px gray;
    }

    .btn-primary{
        background-color: blue;
        border: solid 1px white;
    }
    .btn-primary:hover{
        background-color: white;
        color: blue;
        border: solid 1px blue;
    }
</style>


<div class="form-group form-floating">
    <label for="title" class="form-label">Title</label>
    <input required value="<%= blog.title %>"type="text" name="title" id="title" class="form-control">
    
</div>

<div class="form-group">
    <label for="author" class="form-label">Author</label>
    <input required value="<%= blog.author %>" type="text" name="author" id="author" class="form-control">
    
</div>

<div class="form-group">
    <label for="description" class="form-label">Description</label>
    <textarea name="description" id="description" class="form-control"><%= blog.description %></textarea>
</div>

<div class="form-group">
    <label for="markdown" class="form-label">Content</label>
    <textarea required name="markdown" id="markdown" class="form-control"><%= blog.markdown %></textarea>
</div>

<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>